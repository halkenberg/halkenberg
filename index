<body>
  <h1>Geheimnisse von Halkenberg</h1>
  <p>Geben Sie ein Schlüsselwort ein, um ein Geheimnis zu entdecken:</p>
  <input type="text" id="search" placeholder="Schlüsselwort hier eingeben...">
  <button id="searchButton">Suchen</button>
  <div id="result"></div>

  <script>
    document.getElementById('searchButton').addEventListener('click', function () {
      const input = document.getElementById('search').value.toLowerCase();
      const result = document.getElementById('result');

      // Wörterbuch der Schlüsselwörter und Geheimnisse
      const clues = {
        "halkenberg": "Halkenberg war hier. Vielleicht ist er immer noch in der Nähe...",
        "geheimnis": "Ein altes Geheimnis wurde gelüftet: 'Die Wahrheit liegt im Schatten.'",
        "rätsel": "Lösen Sie das Rätsel: 'Was hat keine Flügel und fliegt trotzdem?'",
        "schatten": "Im Schatten der Vergangenheit liegt die Antwort.",
        "stern": "Die Sterne flüstern: 'Folge dem Licht, um die Dunkelheit zu verstehen.'"
      };

      if (clues[input]) {
        result.innerHTML = `<p>${clues[input]}</p>`;
      } else {
        result.innerHTML = `<p>Kein Geheimnis gefunden. Versuchen Sie es noch einmal.</p>`;
      }
    });
  </script>
</body>
